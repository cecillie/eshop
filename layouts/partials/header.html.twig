{% set title = site.title %}
    <header class="header">
      <div class="header__container">
        <div class="header__menu">
          {%- for item in site.menus.main|sort_by_weight ~%}
          <span class="item__{{ item.weight }} item__nav{% if url(item.url) == url(page) %} item__current{% endif %}">
            <a href="{{ url(item.url) }}">{{ item.name }}</a>
          </span>
          {%- endfor ~%}
        </div>
        <a class="header__branding" href="{{ url(site.home) }}">
          <img src="{{ asset('images/logo.svg') }}" width="200" height="60.8" alt="{% trans %}Logo de {{ title }}{% endtrans %}" class="header__logo">
        </a>
        <div class="header__actions">
          {%- if site.snipcart.account|default(false) ~%}
          <button class="snipcart-customer-signin login-button">{% trans "Votre compte" %}</button>
          {%- endif ~%}
          <button class="header__checkout snipcart-checkout">
            <img src="{{ asset('images/shopping-bag.svg') }}" width="28" height="28" alt="Shopping cart" class="header__checkout-fill">
            <span class="snipcart-items-count">0</span>
          </button>
        </div>
      </div>
    </header>