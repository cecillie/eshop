{% if site.webchat.enabled|default(false) %}
    <script>
      {%- apply minify_js -%}
      (function (d, w) {
        w.MissiveChatConfig = {
          "id": "{{ site.webchat.id }}"
        };
        var s = d.createElement('script');
        s.async = true;
        s.src = 'https://webchat.missiveapp.com/' + w.MissiveChatConfig.id + '/missive.js';
        if (d.head)
          d.head.appendChild(s);
      })(document, window);
      {%- endapply -%}
    </script>
{% endif %}